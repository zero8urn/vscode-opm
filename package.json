{
  "name": "octothorpe-package-manager",
  "displayName": "Octothorpe Package Manager — Streamlined .NET Dependency Management",
  "description": "Streamlined .NET Dependency Management within VS Code — ...tbd",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "install": "bun install",
    "typecheck": "bunx tsc -p . --noEmit",
    "build": "tsc -p ./",
    "esbuild:bundle": "bunx esbuild src/extension.ts --bundle --platform=node --format=cjs --target=node16 --external:vscode --external:node:* --outfile=dist/extension.js",
    "watch": "tsc -p ./ -w",
    "dev": "bunx esbuild src/extension.ts --bundle --platform=node --format=cjs --target=node16 --external:vscode --external:node:* --outfile=dist/extension.js --watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:integration": "npm run build:test && node ./out/test/runTest.js",
    "build:test": "tsc -p tsconfig.test.json",
    "test": "npm run test:unit && npm run test:integration",
    "vscode:prepublish": "node -r source-map-support/register ./out/extension.js"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "typescript": "^5.9.3",
    "eslint": "^8.48.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "vitest": "^1.0.0",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.1",
    "@vscode/test-electron": "^2.5.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "source-map-support": "^0.5.21"
  },
  "contributes": {
    "commands": [
      {
        "command": "dpm.hello",
        "title": "dpm: Hello"
      },
      {
        "command": "dpm.openWebview",
        "title": "dpm: Open Webview"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "",
          "id": "dpm.simpleView",
          "name": "My Simple View"
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}