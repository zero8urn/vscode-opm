{
  "name": "octothorpe-package-manager",
  "publisher": "zero8urn",
  "displayName": "Octothorpe Package Manager â€” Streamlined .NET Dependency Management",
  "description": "Streamlined .NET Dependency Management within VS Code using Octothorpe Package Manager (OPM).",
  "author": {
    "name": "Brian Boyd"
  },
  "version": "0.0.4",
  "bugs": {
    "url": "https://github.com/zero8urn/vscode-opm/issues"
  },
  "homepage": "https://github.com/zero8urn/vscode-opm/blob/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/zero8urn/vscode-opm.git"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "nuget",
    "package",
    "package-manager",
    "dotnet",
    "csproj",
    "c#",
    "nupkg",
    "opm",
    "package-search",
    "package-install",
    "package-update",
    "package-restore",
    "package-browser",
    "dependency-management",
    "private-feed",
    "nuget.org",
    "azure-artifacts",
    "package-icons",
    "package-badges",
    "package-management",
    "package-gui"
  ],
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "license": "mpl-2.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "bun run ./scripts/esbuild.config.mjs",
    "prepare-fixtures": "cp -rn test/fixtures/solutions/* . 2>/dev/null || true",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "vsce-package": "bun run vsce package",
    "package": "bun run typecheck && bun run lint && bun run build && bun run vsce-package",
    "clean": "rm -r ./dist",
    "update-progress": "bun run ./scripts/update-progress.mjs",
    "test": "bun test",
    "test:unit": "bun test src/",
    "test:integration": "bun test test/integration/",
    "pretest:e2e": "bun run build",
    "test:e2e": "node test/runTest.js"
  },
  "devDependencies": {
    "@lit/context": "^1.1.6",
    "@lit/task": "^1.0.3",
    "@types/bun": "latest",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lit": "^3.3.2",
    "mocha": "^11.7.5",
    "prettier": "^2.8.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "contributes": {
    "commands": [
      {
        "command": "opm.openPackageBrowser",
        "title": "opm: Open Package Browser"
      }
    ],
    "configuration": {
      "title": "Octothorpe Package Manager",
      "properties": {
        "nugetPackageManager.logging.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug-level logging to the 'NuGet Package Management' Output channel and extension log file.\nSet to true for verbose diagnostic output.",
          "scope": "window"
        },
        "nugetPackageManager.api.sources": {
          "type": "array",
          "default": [],
          "description": "Package sources (leave empty to auto-discover from nuget.config)",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique source identifier"
              },
              "name": {
                "type": "string",
                "description": "Display name"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "nuget.org",
                  "artifactory",
                  "azure-artifacts",
                  "github",
                  "myget",
                  "custom"
                ],
                "description": "Provider type"
              },
              "indexUrl": {
                "type": "string",
                "description": "Service index URL (index.json) - entry point for NuGet v3 API"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this source is enabled"
              }
            },
            "required": [
              "id",
              "name",
              "provider",
              "indexUrl"
            ]
          },
          "scope": "window"
        },
        "nugetPackageManager.api.nugetConfigPath": {
          "type": "string",
          "description": "Path to nuget.config file (auto-discovered if not specified)",
          "scope": "window"
        },
        "nugetPackageManager.api.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Default request timeout in milliseconds for NuGet API calls",
          "scope": "window"
        },
        "nugetPackageManager.api.serviceIndexTimeout": {
          "type": "number",
          "default": 5000,
          "description": "Timeout in milliseconds for service index fetch operations",
          "scope": "window"
        },
        "nugetPackageManager.api.searchTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout in milliseconds for package search operations",
          "scope": "window"
        },
        "opm.discovery.solutionScanDepth": {
          "type": "string",
          "enum": [
            "root-only",
            "recursive"
          ],
          "default": "root-only",
          "enumDescriptions": [
            "Scan workspace root folders only (fast, recommended)",
            "Scan all subdirectories (slow, may impact performance)"
          ],
          "description": "File system scan depth for solution files",
          "scope": "window"
        },
        "opm.discovery.projectScanDepth": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "maximum": 10,
          "description": "Maximum folder depth for .csproj scanning when no solution selected",
          "scope": "window"
        },
        "opm.discovery.largeWorkspaceThreshold": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "description": "Project count threshold for performance warnings",
          "scope": "window"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@lit-labs/virtualizer": "^2.1.1"
  }
}