{
  "name": "octothorpe-package-manager",
  "displayName": "Octothorpe Package Manager — Streamlined .NET Dependency Management",
  "description": "Streamlined .NET Dependency Management within VS Code — ...tbd",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "bun run ./scripts/esbuild.config.mjs",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "vsce-package": "bun run vsce package",
    "package": "bun run build && bun run vsce-package",
    "clean": "rm -r ./dist",
    "update-progress": "bun run ./scripts/update-progress.mjs",
    "test": "bun test",
    "test:unit": "bun test src/",
    "test:integration": "bun test test/integration/",
    "test:e2e": "node test/runTest.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^11.7.5",
    "prettier": "^2.8.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "contributes": {
    "commands": [
      {
        "command": "opm.hello",
        "title": "opm: Hello"
      },
      {
        "command": "opm.openWebview",
        "title": "opm: Open Webview"
      },
      {
        "command": "opm.openPackageBrowser",
        "title": "opm: Open Package Browser"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "",
          "id": "opm.simpleView",
          "name": "My Simple View"
        }
      ]
    },
    "configuration": {
      "title": "Octothorpe Package Manager",
      "properties": {
        "nugetPackageManager.logging.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug-level logging to the 'NuGet Package Management' Output channel and extension log file.\nSet to true for verbose diagnostic output.",
          "scope": "window"
        },
        "nugetPackageManager.api.sources": {
          "type": "array",
          "default": [],
          "description": "Package sources (leave empty to auto-discover from nuget.config)",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique source identifier"
              },
              "name": {
                "type": "string",
                "description": "Display name"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "nuget.org",
                  "artifactory",
                  "azure-artifacts",
                  "github",
                  "myget",
                  "custom"
                ],
                "description": "Provider type"
              },
              "indexUrl": {
                "type": "string",
                "description": "Service index URL (index.json) - entry point for NuGet v3 API"
              },
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether this source is enabled"
              }
            },
            "required": [
              "id",
              "name",
              "provider",
              "indexUrl"
            ]
          },
          "scope": "window"
        },
        "nugetPackageManager.api.nugetConfigPath": {
          "type": "string",
          "description": "Path to nuget.config file (auto-discovered if not specified)",
          "scope": "window"
        },
        "nugetPackageManager.api.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Request timeout in milliseconds for NuGet API calls",
          "scope": "window"
        },
        "nugetPackageManager.api.semVerLevel": {
          "type": "string",
          "default": "2.0.0",
          "description": "SemVer level support for NuGet packages",
          "enum": [
            "1.0.0",
            "2.0.0"
          ],
          "scope": "window"
        }
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}