{
  "name": "dotnet-package-manager",
  "displayName": "Dotnet Package Manager — Streamlined .NET Dependency Management",
  "description": "Streamlined .NET Dependency Management within VS Code — ...",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:integration": "node ./out/test/runTest.js",
    "test": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "typescript": "^5.9.3",
    "eslint": "^8.48.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.3",
    "mocha": "^10.2.0",
    "@types/mocha": "^10.0.1",
    "@vscode/test-electron": "^2.5.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "source-map-support": "^0.5.21"
  },
  "contributes": {
    "commands": [
      {
        "command": "dpm.hello",
        "title": "dpm: Hello"
      },
      {
        "command": "dpm.openWebview",
        "title": "dpm: Open Webview"
      }
    ],
    "views": {
      "explorer": [
        {
          "icon": "",
          "id": "dpm.simpleView",
          "name": "My Simple View"
        }
      ]
    }
  }
  ,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
